@namespace webenology.blazor.components
 
<div class="@Modal.Style.ModalHeaderCss">
    <h4 class="@Modal.Style.ModalHeaderTitleCss">
        @Header
        @if (!string.IsNullOrEmpty(SubHeader))
        {
        <small class="@Modal.Style.ModalHeaderSubheadingCss">@SubHeader</small>
        }
    </h4>
    @if (!HideClose)
    {
    <span class="@Modal.Style.ModalCloseCss" @onclick="OnClose" aria-lable="Close">
        <i class="@Modal.Style.ModalCloseIconCss"></i>
    </span>
    }
</div>

@code {

    protected override void OnInitialized()
    {
        this.IfNullThrow(Modal);
        base.OnInitialized();
    }

}